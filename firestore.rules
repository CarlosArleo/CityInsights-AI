rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Projects can be read by any authenticated user, but only written by the owner.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == resource.data.ownerId;

      // Rules for sub-collections must be defined within the parent match block.
      
      // Allow read/write on files only by the project owner.
      match /files/{fileId} {
        allow read, write: if request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId;
      }

      // Allow read/write on reviews only by the project owner.
      match /reviews/{reviewId} {
         allow read, write: if request.auth.uid == get(/databases/$(database)/documents/projects/$(projectId)).data.ownerId;
      }
    }
    
    // Collection group rules for querying across projects.
    
    match /{path=**}/files/{fileId} {
       allow read, write: if request.auth.uid == resource.data.ownerId;
    }
    
    match /{path=**}/reviews/{reviewId} {
      allow read, write: if request.auth.uid == resource.data.ownerId;
    }
  }
}
