rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path that follows the structure: users/{userId}/projects/{projectId}/{fileName}
    match /users/{userId}/projects/{projectId}/{allPaths=**} {
      // Allow read and write operations ONLY IF the userId in the path
      // matches the ID of the user making the request.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}